
<div class="container mx-auto p-4">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div data-controller="barchart">
      <canvas id="bar-chart" data-barchart-target="personaChart" width="800" height="450"></canvas>
    </div>
    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-xl font-bold mb-4">Personas</h2>
      <div class="flex space-x-4">
        <div class="border rounded-lg p-4">
          <%= image_tag 'Persona1.png', alt: 'Persona 1', class: 'w-1/3 h-auto rounded-lg' %>
        </div>
        <div class="border rounded-lg p-4">
          <%= image_tag 'Persona2.png', alt: 'Persona 2', class: 'w-1/3 h-auto rounded-lg' %>
        </div>
        <div class="border rounded-lg p-4">
          <%= image_tag 'Persona3.png', alt: 'Persona 3', class: 'w-1/3 h-auto rounded-lg' %>
        </div>
      </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-xl font-bold mb-4">Personality Insights</h2>
      <div class="space-y-4">
        <% @personality_types.each do |type| %>
          <div class="border rounded-lg p-4">
            <div class="flex justify-between items-center">
              <h3 class="font-medium"><%= type.name %></h3>
              <span class="text-sm text-gray-500">
                Count: <%= type.patients.count %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
